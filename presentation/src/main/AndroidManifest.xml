<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pigkins.qa">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".presentation.AndroidApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.view.activity.QuestionListActivity"
            android:label="@string/title_activity_question_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.view.activity.WeightListActivity"
            android:label="@string/title_activity_weight_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".presentation.view.activity.BaseActivity"></activity>
    </application>

</manifest>